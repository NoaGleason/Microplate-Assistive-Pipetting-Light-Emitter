// Example for NeoPixel Shield.  In this application we'd like to use it
// as a 5x8 tall matrix, with the USB port positioned at the top of the
// Arduino.  When held that way, the first pixel is at the top right, and
// lines are arranged in columns, progressive order.  The shield uses
// 800 KHz (v2) pixels that expect GRB color data.

// Change the number of LEDs below to the # on the light panel (96 or 384)
#define NUM_LEDS 96
// Change pin number below to the I/O pin of your microcontroller that the light panel is connected to
#define PIN 6
#define BRIGHTNESS 50

Adafruit_NeoPixel strip = Adafruit_NeoPixel(NUM_LEDS, PIN, NEO_GRB + NEO_KHZ800);

void setup() {
  // This is for Trinket 5V 16MHz, you can remove these three lines if you are not using a Trinket
  #if defined (__AVR_ATtiny85__)
    if (F_CPU == 16000000) clock_prescale_set(clock_div_1);
  #endif
  // End of trinket special code
  strip.setBrightness(BRIGHTNESS);
  strip.begin();
  strip.show(); // Initialize all pixels to 'off'

  // Initialize all LEDs red
  for(uint16_t j = 0; j < NUM_LEDS ; j++){
   strip.setPixelColor(j,strip.Color(255,0,0));
  }
    
 strip.show();  
}

// This example loop turns all LEDs on red, then green, then blue with a 5 second delay between each transition
void loop() {

 // Turn all LEDs red
 for(uint16_t j = 0; j < NUM_LEDS; j++){
   strip.setPixelColor(j,strip.Color(255,0,0)); 
 }
 strip.show();  
 delay(5000);

 // Turn all LEDs green
 for(uint16_t j = 0; j < NUM_LEDS; j++){
   strip.setPixelColor(j,strip.Color(0,255,0)); 
 }
 strip.show();  
 delay(5000);

 // Turn all LEDs blue
 for(uint16_t j = 0; j < NUM_LEDS; j++){
   strip.setPixelColor(j,strip.Color(0,0,255)); 
 }
 strip.show();  
 delay(5000);
  
}
